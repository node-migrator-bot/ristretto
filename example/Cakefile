ristretto = require '../src/ristretto'

task 'build', 'compile sample app', (options) ->
  ristretto.bundle
    target    : 'output.js'
    main      : 'src/app.coffee'
    raw       : ['raw/globals.js']
    minify    : true
    libraries :
      util : 'libraries/util.js'
    copyright : """
      Ristretto sample Â© Adrien Friggeri
      MIT License
    """